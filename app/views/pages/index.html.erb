<div class="d-flex justify-content-between align-items-center my-4">
  <h1>Pages</h1>
  <%= link_to 'New Page', new_page_path, class: 'btn btn-primary' %>
</div>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Url</th>
        <th>Product</th>
        <th>Price</th>
        <th class="w-25">Description</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td>
            <%= link_to page do %>
              <img src="<%= page.product.image_url %>" style="width: 100px;">
            <% end %>
          </td>
          <td><a href="<%= page.url %>" target="_blank">Go to shop</a></td>
          <td><%= page.product.name %></td>
          <td><%= format_page_price(page) %></td>
          <td><%= strip_tags(page.description) %></td>
          <td class="text-end">
            <%= link_to 'Edit', edit_page_path(page), class: 'btn btn-success' %>
            <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
