<div class="d-flex justify-content-between align-items-center my-4">
  <h1>Pages</h1>
  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
</div>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>From</th>
        <th>To</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to product do %>
              <img src="<%= product.image_url %>" alt="" height="80px">
            <% end %>
          </td>
          <td><%= link_to product.name, product %></td>
          <td><%= format_page_price(product.pages.first) %></td>
          <td><%= format_page_price(product.pages.last) %></td>
          <td class="text-end">
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-success' %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
