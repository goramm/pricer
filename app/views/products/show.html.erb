<div class="d-flex justify-content-between align-items-center my-4">
  <h1><%= @product.name %></h1>
  <div class="d-flex align-items-center">
    From <span class="btn btn-success mx-1"><strong><%= format_page_price(@product.pages.first) %></strong></span>
    To <span class="btn btn-secondary ms-1"><strong><%= format_page_price(@product.pages.last) %></strong></span>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-5">
    <div class="img-thumbnail text-center mb-4">
      <img src="<%= @product.image_url %>" class="img-fluid py-3">
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'Back', products_path, class: 'btn btn-info' %>
      <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="col-md-7">
    <div class="pages">
      <% @product.pages.each_with_index do |page, i| %>
        <div class="card mb-3">
          <div class="card-body d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between">
              <p>#<%= i + 1 %></p>
              <% if page.url %>
                <p><%= page.shop.host %></p>
              <% end %>
            </div>
            <p><%= strip_tags(page.description) %></p>
            <div class="text-end">
              <% if page.price %>
                <p><strong><%= format_page_price(page) %></strong></p>
              <% end %>
              <a href="<%= page.url %>" target="_blank" class="btn btn-success">Go to shop</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
