<div class="d-flex justify-content-between align-items-center my-4">
  <h1>Shops</h1>
  <%= link_to 'New Shop', new_shop_path, class: 'btn btn-primary' %>
</div>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Host</th>
        <th>Price selector</th>
        <th>Currency selector</th>
        <th>Description selector</th>
        <th style="width: 200px;"></th>
      </tr>
    </thead>

    <tbody>
      <% @shops.each do |shop| %>
        <tr>
          <td><%= link_to shop.host, shop %></td>
          <td><%= shop.price_selector %></td>
          <td><%= shop.currency_selector %></td>
          <td><%= shop.description_selector %></td>
          <td class="text-end">
            <%= link_to 'Edit', edit_shop_path(shop), class: 'btn btn-success' %>
            <%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>